<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff4d7feb" />
            <corners android:radius="16dp" />
            <stroke
                android:width="3dp"
                android:color="#ff00f3ac" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff4d7feb" />
            <corners android:radius="16dp" />
            <stroke
                android:width="3dp"
                android:color="#ff00f3ac" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff00f3ac" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
        <solid android:color="#ff4d7feb" />
        <corners android:radius="16dp" />
        <stroke
            android:width="3dp"
            android:color="#ff4d7feb" />
    </shape>
    </item>

</selector>